<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:layout_marginRight="30dp"
    android:background="@drawable/searchbackground"
    android:contentDescription="输入地点名称"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_search"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:src="@drawable/back_icon" />
    </RelativeLayout>

    <TextSwitcher
        android:id="@+id/addr_search"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/color_dark2" >

        <TextView
            android:id="@+id/addr"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/typeInAddr"
            android:textColor="#969696"
            android:textSize="16dp" />
    </TextSwitcher>

    <ImageView
        android:id="@+id/imageView_nearby_search"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="false"
        android:src="@drawable/nearby_search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/imageView_man_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/male_selected" />

        <ImageView
            android:id="@+id/imageView_female_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="35dp"
            android:src="@drawable/female_selected" />

        <ImageView
            android:id="@+id/imageView_unlimited"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="35dp"
            android:src="@drawable/infor_11" />

    </FrameLayout>
    <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="70dp" >

       <ImageView
           android:id="@+id/personinfo_report"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_gravity="center"
           android:src="@drawable/house_selected" />

       <ImageView
           android:id="@+id/personitem05"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center_vertical|right"
           android:layout_marginRight="35dp"
           android:src="@drawable/infor_14" />

       <ImageView
           android:id="@+id/imageView10"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center_vertical|left"
           android:layout_marginLeft="35dp"
           android:src="@drawable/infor_11" />

    </FrameLayout>
    <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="70dp" >

       <ImageView
           android:id="@+id/imageView_17"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_gravity="center"
           android:src="@drawable/infor_15" />

       <ImageView
           android:id="@+id/nextquery"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center_vertical|right"
           android:layout_marginRight="35dp"
           android:src="@drawable/infor_21" />

       <ImageView
           android:id="@+id/imageView10"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center_vertical|left"
           android:layout_marginLeft="35dp"
           android:src="@drawable/infor_11" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView_rent_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/rent_search" />

    <ImageView
        android:id="@+id/imageView_search"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/search_06_03" />
    
</LinearLayout>