<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_42" />

    <ImageView
        android:id="@+id/imageView_43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_43" />

    <ImageView
        android:id="@+id/imageView_44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_44" />

    <ImageView
        android:id="@+id/imageView_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_45" />

    <ImageView
        android:id="@+id/imageView_46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_46" />

    <ImageView
        android:id="@+id/imageView_47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/text_47" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#DDDDDD" >

        <ImageView
            android:id="@+id/prequery_04"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="onClickPre"
            android:src="@drawable/text_above" />

        <ImageView
            android:id="@+id/nextquery_04"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/prequery_04"
               android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/prequery_04"
            android:onClick="onClickNext"
            android:src="@drawable/text_next" />
    </RelativeLayout>

</LinearLayout>